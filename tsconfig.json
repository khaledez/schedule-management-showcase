{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "incremental": true,
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["__tests__/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
