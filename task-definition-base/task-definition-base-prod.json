{
  "containerDefinitions": [
    {
      "name": "Container",
      "image": "%accountID%.dkr.ecr.ca-central-1.amazonaws.com/%service_lower_name%:%BUILD_VERSION%",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DB_NAME",
          "value": "%service_name%"
        },
        {
          "name": "MYSQL_PASSWORD_PARAMETER",
          "value": "%MYSQL_PASSWORD_PARAMETER%"
        },{
          "name": "DB_PASSWORD",
          "value": "%DB_PASSWORD%"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_USERNAME",
          "value": "admin"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "DB_HOST",
          "value": "%DB_HOST%"
        },{
          "name": "S3_BUCKET_NAME",
          "value": "%S3_BUCKET_NAME%"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/QA%service_name%",
          "awslogs-region": "%AWS_DEFAULT_REGION%",
          "awslogs-stream-prefix": "ecs"
        }
      }

    }, {
      "name": "xray-daemon",
      "image": "amazon/aws-xray-daemon",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 2000,
          "hostPort": 2000,
          "protocol": "udp"
        }
      ],
      "essential": true,
      "environment": [],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/PORD%service_name%",
          "awslogs-region": "%AWS_DEFAULT_REGION%",
          "awslogs-stream-prefix": "xray"
        }
      }

    }
  ],
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "taskRoleArn": "arn:aws:iam::%accountID%:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::%accountID%:role/ecsTaskExecutionRole",
  "cpu": "256",
  "memory": "2048",
  "volumes": []
}
